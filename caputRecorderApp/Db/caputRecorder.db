record(waveform, "$(P)caputRecorderCommand") {
    field(FTVL, "CHAR")
    field(NELM, "$(N)")
}
record(waveform, "$(P)caputRecorderComment") {
    field(FTVL, "CHAR")
    field(NELM, "$(N)")
}

record(waveform, "$(P)caputRecorderUsers") {
    field(FTVL, "CHAR")
    field(NELM, "$(N)")
}
record(waveform, "$(P)caputRecorderHosts") {
    field(FTVL, "CHAR")
    field(NELM, "$(N)")
}
record(waveform, "$(P)caputRecorderPrefixes") {
    field(FTVL, "CHAR")
    field(NELM, "$(N)")
}

record(bo, "$(P)caputRecorderMacroStopStart") {
	field(ZNAM, "Stop")
	field(ONAM, "Start")
}
record(bo, "$(P)caputRecorderMacroRecording") {
	field(ZNAM, "Done")
	field(ONAM, "Recording")
}
record(stringout, "$(P)caputRecorderMacroName") {
}
record(stringout, "$(P)caputRecorderUserMessage") {
}
record(calcout, "$(P)caputRecorderPulse") {
	field(SCAN, "1 second")
	field(CALC, "val?0:1")
}
record(busy, "$(P)caputRecorderReloadMacros") {
	field(ZNAM, "Done")
	field(ONAM, "Reload Macros")
}

record(stringout, "$(P)caputRecorderMacro") {
	field(FLNK, "$(P)caputRecorderSetMacrosBusy.PROC")
}
record(bo, "$(P)caputRecorderSetMacrosBusy") {
	field(DOL, "1")
	field(ZNAM, "Done")
	field(ONAM, "Reload Macros")
	field(OUT, "$(P)caputRecorderMacrosBusy PP")
}
record(busy, "$(P)caputRecorderMacrosBusy") {
	field(ZNAM, "Done")
	field(ONAM, "Reload Macros")
}

record(mbbo, "$(P)caputRecorderMacros1") {
	field(PINI, "YES")
	field(ZRST,"Not loaded")
	field(FLNK, "$(P)caputRecorderMacros1Put")
}
record(sseq, "$(P)caputRecorderMacros1Put") {
	field(DOL1, "$(P)caputRecorderMacros1")
	field(LNK1, "$(P)caputRecorderMacro PP")
}

record(mbbo, "$(P)caputRecorderMacros2") {
	field(PINI, "YES")
	field(ZRST,"Not loaded")
	field(FLNK, "$(P)caputRecorderMacros2Put")
}
record(sseq, "$(P)caputRecorderMacros2Put") {
	field(DOL1, "$(P)caputRecorderMacros2")
	field(LNK1, "$(P)caputRecorderMacro PP")
}

record(busy, "$(P)caputRecorderExecuteMacro") {
	field(ZNAM, "Done")
	field(ONAM, "Do")
}
record(longout, "$(P)caputRecorderExecuteLoops") {
	field(DOL, "1")
}
record(busy, "$(P)caputRecorderAbortMacro") {
	field(ZNAM, "Done")
	field(ONAM, "Abort")
}
